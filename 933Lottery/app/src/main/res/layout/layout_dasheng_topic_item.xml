<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/def_header"
        android:layout_marginRight="10dp"
        app:riv_corner_radius="25dp"
        app:riv_mutate_background="true"/>
    <TextView
        android:id="@+id/title"
        android:maxLines="1"
        android:layout_marginTop="3dp"
        android:text="这是标题这是标题这是标标题这是标题pdfdfdf"
        android:textColor="@color/color444"
        android:textSize="16sp"
        android:layout_toRightOf="@id/avatar"
        android:layout_toLeftOf="@+id/timer"
        android:ellipsize="end"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/timer"
        android:text="20180314"
        android:layout_alignBaseline="@+id/title"
        android:layout_toLeftOf="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/content"
        android:maxLines="1"
        android:textSize="14sp"
        android:text="这是标题这是标题这是标标题这是标题pdfdfdf"
        android:layout_toLeftOf="@+id/details"
        android:layout_toRightOf="@+id/avatar"
        android:layout_below="@+id/title"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/details"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="10dp"
        android:src="@mipmap/detail_arrow_press"
        android:layout_height="10dp" />
</RelativeLayout>