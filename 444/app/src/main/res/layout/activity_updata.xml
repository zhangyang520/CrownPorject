<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">


    <RelativeLayout
            android:background="@color/title_bg_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">
        <ImageView
                android:layout_marginLeft="8dp"
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back"
        />
        <TextView
                android:textColor="@color/black"
                android:textSize="15.2sp"
                android:text="修改密码"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/first_margin_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <LinearLayout
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/first_margin_top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/first_item_height">

                <ImageView
                        android:layout_width="10.9dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="@dimen/second_margin_left"
                        android:src="@mipmap/a4"/>
                <EditText
                        android:id="@+id/et_phone"
                        android:textSize="@dimen/txt_40px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/first_margin_left"
                        android:background="@null"
                        android:maxLength="11"
                        android:inputType="number"
                        android:hint="请输入11位手机号"/>
            </LinearLayout>


        <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/first_margin_top"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/first_item_height">

            <ImageView
                    android:layout_marginLeft="@dimen/second_margin_left"
                    android:layout_width="10.9dp"
                    android:layout_height="15.2dp"
                    android:src="@mipmap/a5"/>
            <EditText
                    android:minLines="6"
                    android:maxLength="12"
                    android:id="@+id/et_pwd"
                    android:textSize="@dimen/txt_40px"
                    android:paddingLeft="@dimen/first_margin_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:hint="请输入旧密码"/>
        </LinearLayout>


        <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/first_margin_top"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/first_item_height">

            <ImageView
                    android:layout_marginLeft="@dimen/second_margin_left"
                    android:layout_width="10.9dp"
                    android:layout_height="15.2dp"
                    android:src="@mipmap/a5"/>
            <EditText
                    android:minLines="6"
                    android:maxLength="12"
                    android:id="@+id/et_pwd_new"
                    android:textSize="@dimen/txt_40px"
                    android:paddingLeft="@dimen/first_margin_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="请输入新密码"/>
        </LinearLayout>


        <Button
                android:layout_marginLeft="@dimen/second_margin_left"
                android:layout_marginRight="@dimen/second_margin_left"
                android:id="@+id/btn_update"
                android:textSize="14.5sp"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="43.2dp"
                android:background="@drawable/shape_login"
                android:textColor="@color/black"
                android:text="完成修改"
            />
    </LinearLayout>
</LinearLayout>