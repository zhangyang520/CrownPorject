<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/rl_title"
            android:background="@color/title_bg_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

        <ImageView
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/back"
        />
        <TextView
                android:textColor="@color/black"
                android:textSize="15.2sp"
                android:text="分享推广"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tv_shouyi_suanfa"
                android:textColor="#b3b3b3"
                android:textSize="@dimen/txt_36px"
                android:text="收益算法"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </RelativeLayout>


    <ImageView
            android:id="@+id/iv_bg"
            android:layout_below="@+id/rl_title"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="631.3dp"/>

    <View
            android:layout_below="@+id/rl_title"
            android:alpha="0.9"
            android:background="#4c4c4c"
            android:layout_width="match_parent"
            android:layout_height="631.3dp"></View>

    <TextView
            android:layout_below="@+id/rl_title"
            android:id="@+id/tv_title"
            style="@style/txt_48px_white"
            android:text="开启激情之旅"
            android:textColor="#fdc001"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="35.2dp"
            />

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_zcode"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_width="196.4dp"
            android:layout_height="196.4dp"/>

    <LinearLayout
            android:id="@+id/ll_zcode_content"
            android:orientation="horizontal"
            android:layout_below="@+id/iv_zcode"
            android:gravity="center_horizontal"
            style="@style/layout_mw">

        <TextView
                android:layout_marginTop="10dp"
                style="@style/txt_48px_white"
                android:text="我的推广码："
             />

        <TextView
                android:id="@+id/tv_my_code"
                android:layout_marginTop="10dp"
                style="@style/txt_48px_white"
                android:text="123456"
                android:textColor="#fdc001"
        />
  </LinearLayout>


    <RelativeLayout
            android:id="@+id/rl_zcode1"
            android:layout_below="@+id/ll_zcode_content"
            android:gravity="center_horizontal"
            style="@style/layout_mw">

        <TextView
                android:id="@+id/tv_zoce1"
                android:layout_marginTop="10dp"
                style="@style/txt_30px"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:text="截图分享二维码或点击分享推广链接发送给好友"
        />

        <TextView
                android:id="@+id/tv_zcode2"
                android:layout_below="@+id/tv_zoce1"
                android:layout_marginTop="10dp"
                style="@style/txt_30px"
                android:text="好友下载安装并成功注册后即可"
                android:layout_marginLeft="93dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
        />

        <TextView
                android:layout_below="@+id/tv_zoce1"
                android:layout_toRightOf="@+id/tv_zcode2"
                style="@style/txt_30px"
                android:layout_marginTop="10dp"
                android:text="免费观影"
                android:textColor="#fdc001"
                android:layout_width="wrap_content"
        />
    </RelativeLayout>

     <android.support.v7.widget.AppCompatImageButton
             android:id="@+id/ib_share"
             android:layout_marginTop="32dp"
             style="@style/layout_ww"
             android:src="@mipmap/iv_share_link"
             android:background="@null"
             android:layout_below="@+id/rl_zcode1"
             android:layout_centerHorizontal="true"
     />

    <LinearLayout
            android:layout_below="@+id/ib_share"
            android:layout_marginTop="30dp"
             android:orientation="vertical"
            android:layout_centerHorizontal="true"
            style="@style/layout_ww">

        <TextView
                android:id="@+id/tv_tip1"
                style="@style/txt_30px"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:text="— 温馨提示 —"
        />

        <TextView
                android:id="@+id/tv_tip2"
                android:layout_marginTop="16.36dp"
                style="@style/txt_30px"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:text="请妥善保管好自己的账号、安全密码、推广码"
        />

        <RelativeLayout
                android:layout_below="@+id/ll_zcode_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                style="@style/layout_ww">
            <TextView
                    android:id="@+id/tv_zocode3"
                    style="@style/txt_30px"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="好友安装并成功注册，输入您的推广码后您就能获得"
            />


            <TextView
                    android:layout_toRightOf="@+id/tv_zocode3"
                    style="@style/txt_30px"
                    android:text="现金奖励"
                    android:textColor="#fdc001"
                    android:layout_width="wrap_content"
            />
        </RelativeLayout>

        <RelativeLayout
                android:layout_below="@+id/ll_zcode_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                style="@style/layout_ww">
            <TextView
                    android:id="@+id/tv_zocode4"
                    style="@style/txt_30px"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="推广的人数越多，二级三级收益越多，您就能"
            />


            <TextView
                    android:layout_toRightOf="@+id/tv_zocode4"
                    style="@style/txt_30px"
                    android:text="轻松躺赚"
                    android:textColor="#fdc001"
                    android:layout_width="wrap_content"
            />
        </RelativeLayout>

        <RelativeLayout
                android:layout_below="@+id/ll_zcode_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                style="@style/layout_ww">
            <TextView
                    android:id="@+id/tv_zocode5"
                    style="@style/txt_30px"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="告诉朋友：输入您的推广码，即可免费获得"
            />


            <TextView
                    android:layout_toRightOf="@+id/tv_zocode5"
                    style="@style/txt_30px"
                    android:text="现金红包"
                    android:textColor="#fdc001"
                    android:layout_width="wrap_content"
            />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>