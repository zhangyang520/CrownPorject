<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/seconde_gg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/title_bg_color"
        android:layout_width="match_parent"
       android:layout_height="@dimen/title_height">

        <ImageView
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/back"
        />
        <TextView
            android:textColor="@color/black"
            android:textSize="15.2sp"
            android:text="系统设置"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
            android:id="@+id/line1"
            android:layout_below="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_top"
            android:background="@color/seconde_gg_color"/>

    <RelativeLayout
        android:id="@+id/modify_pwd"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="10.9dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/second_margin_left"
                android:src="@mipmap/iv_edit"/>

        <TextView
                android:layout_toRightOf="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
                android:textColor="@color/black"
            android:layout_marginLeft="@dimen/first_margin_left"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_right"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
            android:id="@+id/line2"
            android:layout_below="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_top"
            android:background="@color/seconde_gg_color"/>

    <RelativeLayout
        android:id="@+id/huanchun"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
                android:id="@+id/iv_copy"
                android:layout_width="10.9dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/second_margin_left"
                android:src="@mipmap/iv_edit"/>

        <TextView
            android:layout_toRightOf="@+id/iv_copy"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:layout_marginLeft="@dimen/first_margin_left"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/arrow_right"
            android:drawablePadding="5dp"
            android:gravity="center"
            />
    </RelativeLayout>

    <Button
        android:layout_marginTop="36.4dp"
        android:background="@drawable/shape_login"
        android:textSize="13sp"
        android:text="退出登录"
        android:textColor="@color/red"
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>