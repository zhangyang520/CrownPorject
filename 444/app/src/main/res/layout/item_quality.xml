<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_marginRight="15.2dp"
     android:layout_marginLeft="15.2dp"
    android:layout_marginTop="7.6dp"
    android:layout_marginBottom="7.6dp">

    <ImageView
        android:id="@+id/iv_quality"
        android:src="@mipmap/zhanwei2"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="163dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/jingping_tips"
                android:id="@+id/title"
                android:textSize="8.5sp"
                android:gravity="center"
                />

    </RelativeLayout>



</FrameLayout>