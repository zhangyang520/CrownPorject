<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/first_item_height">

    <View
            android:id="@+id/line1"
            android:layout_below="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_top"
            android:background="@color/seconde_gg_color"/>

<RelativeLayout
    android:id="@+id/goto_caip"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_caipiao"
        android:layout_width="21.8dp"
        android:layout_height="21.8dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <TextView
        android:layout_toRightOf="@+id/image_caipiao"
        android:id="@+id/tv_caipiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        />
    <TextView
            android:id="@+id/tv_togo"
            android:layout_toLeftOf="@+id/iv_goto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载应用免费赚"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        />

    <ImageView
            android:id="@+id/iv_goto"
            android:layout_width="7.27dp"
            android:layout_height="13.09dp"
            android:src="@mipmap/iv_goto"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
    />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        />
</LinearLayout>